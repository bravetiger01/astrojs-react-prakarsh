---
import GlassSurface from '../components/GlassSurface/GlassSurface';

const navLinks = [
  { name: 'HOME', href: '#home', highlight: false },
  { name: 'ABOUT', href: '#about', highlight: false },
  { name: 'EVENTS', href: '/events', highlight: false },
];
---

<nav class="navbar">
  <div class="navbar-border-wrapper">
    <GlassSurface 
      client:load
      width="100%"
      height="auto"
      borderRadius={50}
      blur={10}
      opacity={0.6}
      backgroundOpacity={0.1}
      saturation={1.8}
      brightness={50}
      className="navbar-glass"
    >
      <div class="navbar-content">
        <div class="navbar-logo">
          <img src="/assets/logo.svg" alt="Logo" />
        </div>
        
        <div class="navbar-links">
          {navLinks.map(link => (
            <a href={link.href} class={`nav-link ${link.highlight ? 'nav-link-highlight' : ''}`}>
              {link.name}
            </a>
          ))}
        </div>
        
        <a href="#register" class="nav-button">
          <span>REGISTER NOW</span>
        </a>
      </div>
    </GlassSurface>
  </div>
</nav>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Bruno+Ace+SC&display=swap');

  .navbar {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    max-width: 1200px;
    z-index: 1200;
    font-family: 'Bruno Ace SC', sans-serif;
  }

  .navbar-border-wrapper {
    
    position: relative;
    padding: 2px;
    border-radius: 52px;
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.3) 0%, 
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.3) 100%
    );
    box-shadow: 
      0 0 20px rgba(255, 255, 255, 0.1),
      0 0 40px rgba(0, 0, 0, 0.2);
  }

  .navbar-glass {
    padding: 20px 40px;
    border:10px solid peachpuff;
  }

  .navbar-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    gap: 60px;
    
  }

  .navbar-logo {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    padding: 8px 0;
  }

  .navbar-logo img {
    height: 40px;
    width: auto;
  }

  .navbar-links {
    display: flex;
    align-items: center;
    gap: 48px;
    flex: 1;
    justify-content: center;
  }

  .nav-link {
    color: #000000;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
    padding: 8px 0;
    border-radius: 8px;
    border-color: ;
  }

  .nav-link:hover {
    color: #F1B5A2;
  }

  .nav-link-highlight {
    color: #F1B5A2;
    font-weight: 600;
  }

  .nav-button {
    background: linear-gradient(135deg, #F1B5A2 0%, #E89B88 100%);
    color: #000000;
    text-decoration: none;
    padding: 14px 32px;
    border-radius: 30px;
    font-size: 15px;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: none;
    box-shadow: 0 4px 20px rgba(241, 181, 162, 0.5);
    flex-shrink: 0;
    position: relative;
    z-index: 10;
    isolation: isolate;
  }

  .nav-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 25px rgba(241, 181, 162, 0.7);
    background: linear-gradient(135deg, #E89B88 0%, #F1B5A2 100%);
  }

  @media (max-width: 768px) {
    .navbar {
      width: 95%;
      top: 10px;
    }

    .navbar-border-wrapper {
      border-radius: 32px;
    }

    .navbar-glass {
      padding: 12px 20px;
    }

    .navbar-content {
      gap: 20px;
    }

    .navbar-logo img {
      height: 32px;
    }

    .navbar-links {
      gap: 24px;
    }

    .nav-link {
      font-size: 14px;
      padding: 6px 0;
    }

    .nav-button {
      padding: 10px 20px;
      font-size: 13px;
    }
  }

  @media (max-width: 480px) {
    .navbar-links {
      display: none;
    }
  }
</style>
