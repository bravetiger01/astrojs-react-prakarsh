<style>
  /* Import mobile-specific styles */
  @import "../styles/optimized-styles.css";

  /* Responsive positioning for billboards */
  .tech-billboard {
    position: absolute;
    bottom: 23%;
    left: 8%;
    z-index: 9000;
    transform: scale(0.7);
    pointer-events: auto;
    cursor: pointer;
  }

  .nontech-ship {
    position: absolute;
    bottom: 30%;
    right: 15%;
    z-index: 9000;
    transform: scale(0.7);
    pointer-events: auto;
    cursor: pointer;
  }

  /* Scrolling banner positioning */
  .scrolling-banner-wrapper {
    position: absolute;
    bottom: 13%;
    left: 0;
    right: 0;
    z-index: 1200;
    pointer-events: none;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .scrolling-banner-wrapper {
      bottom: 8%;
      z-index: 3000;
      transform: scale(1.2);
    }

    .tech-billboard {
      bottom: 28%;
      left: 15%;
      transform: scale(0.35) perspective(600px) rotateY(15deg);
      transform-origin: left center;
    }

    .nontech-ship {
      bottom: 28%;
      right: 15%;
      left: auto;
      transform: scale(0.3) perspective(600px) rotateY(-15deg);
      transform-origin: right center;
    }
  }

  /* Small phones - S20 Ultra and similar (412px - 480px) */
  @media (max-width: 480px) {
    .scrolling-banner-wrapper {
      bottom: 6%;
      transform: scale(1);
    }

    .tech-billboard {
      bottom: 15%;
      left: 36.5%;
      transform: translateX(-50%) scale(0.3) perspective(700px) rotateY(2deg);
      transform-origin: center center;
      clip-path: none;
    }

    .nontech-ship {
      bottom: 20%;
      right: -5%;
      left: auto;
      transform: scale(0.54) perspective(600px) rotateY(-12deg);
      transform-origin: right center;
      z-index: 3000;
    }
  }

