/>
<style>
  /* Import mobile-specific styles */
  @import "../styles/optimized-styles.css";

  /* Responsive positioning for billboards */
  .tech-billboard {
    position: absolute;
    bottom: 23%;
    left: 8%;
    z-index: 1100;
    transform: scale(0.7);
  }

  .nontech-ship {
    position: absolute;
    bottom: 30%;
    right: 15%;
    z-index: 1100;
    transform: scale(0.7);
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .tech-billboard {
      bottom: 28%;
      left: 15%;
      transform: scale(0.35) perspective(600px) rotateY(15deg);
      transform-origin: left center;
    }

    .nontech-ship {
      bottom: 28%;
      right: 15%;
      left: auto;
      transform: scale(0.3) perspective(600px) rotateY(-15deg);
      transform-origin: right center;
    }
  }

  /* Small phones - S20 Ultra and similar (412px - 480px) */
  @media (max-width: 480px) {
    .tech-billboard {
      bottom: 26.5%;
      left: 36.5%;
      transform: translateX(-50%) scale(0.3) perspective(700px) rotateY(2deg);
      transform-origin: center center;
      clip-path: none;
    }

    .nontech-ship {
      bottom: 20%;
      right: -5%;
      left: auto;
      transform: scale(0.54) perspective(600px) rotateY(-12deg);
      transform-origin: right center;
    }
  }

