<!-- MobileNav rendered OUTSIDE HomePage to avoid z-index stacking issues -->
<MobileNav />
<div class="HomePage">
  <div class="designHomePage">
    <!-- Scrolling Banner -->
    <!-- <div class="scrolling-banner-wrapper">
      <ScrollingBanner
        message="⚡ SEATS ALMOST FULL ⚡"
        accentColor="#ff00ff"
        secondaryColor="#4af0f0"
        client:load
      />
    </div> -->

    <!-- Holographic Card Buttons - Billboard Style in City Area -->
    <!-- Left billboard on left building -->
    <div class="tech-billboard">
      <FlyingShipBanner
        title="TECH EVENTS"
        href="/events?category=tech"
        accentColor="#4af0f0"
        secondaryColor="#ff00ff"
        polePosition="left"
        client:load
      />
    </div>
    <!-- Right billboard - Flying Ship with NON TECH banner -->
    <div class="nontech-ship">
      <FlyingShipBanner
        title="NON TECH EVENTS"
        href="/events?category=non-tech"
        accentColor="#ff00ff"
        secondaryColor="#4af0f0"
        client:load
      />
    </div>
    <div class="HeroSection">
      <div class="sprite title">
        <p class="tagLine">THE NEXT ITERATION</p>
      </div>

      <div class="sprite baseClouds"></div>
      <div class="sprite baseClouds2"></div>
      <div class="WindMillParent">
        <div class="sprite staticWindMill"></div>
        <div class="sprite rotatingWindMill"></div>
      </div>
      <div class="WaterMillParent">
        <div class="sprite rotatingWaterMill1"></div>
        <div class="sprite rotatingWaterMill2"></div>
        <div class="sprite staticWaterMill"></div>
        <div class="sprite Water"></div>
      </div>
      <div class="sprite titleCloud1"></div>
      <div class="sprite titleCloud2"></div>
      <div class="sprite titleCloud3"></div>
      <div class="sprite stars"></div>
      <div class="sprite geometricCircleGrid"></div>
      <div class="sprite babbageMachine"></div>
    </div>

    <div class="hourGlassLeftParent">
      <div class="sprite hourGlassLeftPillar"></div>
    </div>
    <div class="hourGlassRightParent">
      <div class="sprite hourGlassRightPillar"></div>
    </div>
    <div class="hourGlassTopParent">
      <div class="sprite hourGlassTop"></div>
    </div>
    <div class="hourGlassBaseParent">
      <div class="sprite hourGlassBase"></div>
    </div>
    <div class="MiddleSection">
      <p class="dialogue">Sometimes you let go...</p>
      <p class="dialogue2">free-falling inside evolution's events...</p>
      <div class="sprite MobileHourGlassLeftMiddle"></div>
      <div class="sprite MobileHourGlassRightMiddle"></div>

      <div class="sprite purpleClouds1"></div>
      <div class="sprite purpleClouds2"></div>
      <div class="sprite girlFall"></div>
      <div class="sprite guyFall"></div>
      <div class="sprite peachClouds1"></div>
      <div class="sprite peachClouds2"></div>
    </div>
    <div class="MiddleSection Shine">
      <div class="sprite upShine"></div>
      <div class="sprite downShine"></div>
    </div>

    <div class="FutureParent">
      <div class="sprite bgFutureBuild"></div>
      <div class="sprite bgFutureBuild2"></div>
      <div class="sprite foreGroundRoad"></div>
      <div class="BridgeAndTrainParent">
        <div class="sprite train"></div>
        <div class="sprite bridge"></div>
      </div>
    </div>
  </div>
  <!-- Sponsors Section with Flying Ship Banners -->
  <div class="footer" style="width:100%;">
    <img
      src="/assets/footer.avif"
      style="width:100%; height:auto; display:block; aspect-ratio:4346/2600;"
      alt="Sponsors"
    />
      
  </div>
</div>

<style>
  .sponsors-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0;
    padding: 1rem 0.5rem;
    width: 100%;
    overflow-x: hidden;
  }

  .title-sponsor {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: -2rem;
  }

  .associate-sponsors {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: -2rem;
  }

  .donor-sponsor {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 480px) {
    .sponsors-container {
      padding: 0.5rem 0;
      gap: 0;
    }

    .title-sponsor {
      transform: scale(0.85);
      transform-origin: top center;
      margin-bottom: -3rem;
    }

    .associate-sponsors {
      transform: scale(0.75);
      transform-origin: top center;
      margin-bottom: -3rem;
    }

    .donor-sponsor {
      transform: scale(0.7);
      transform-origin: top center;
    }
  }

  @media (max-width: 380px) {
    .title-sponsor {
      transform: scale(0.7);
      margin-bottom: -4rem;
    }

    .associate-sponsors {
      transform: scale(0.6);
      margin-bottom: -4rem;
    }

    .donor-sponsor {
      transform: scale(0.55);
    }
  }
</style>
