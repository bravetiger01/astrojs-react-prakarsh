---
/**
 * ResponsiveNav - Shows hamburger menu on mobile, glass navbar on desktop
 * Use this on pages that need responsive navigation (About, Events, etc)
 */
import GlassSurface from "./GlassSurface/GlassSurface";
import MobileNav from "./MobileNav.astro";

const { showDesktopNav = true } = Astro.props;

const navLinks = [
    { name: "HOME", href: "/" },
    { name: "ABOUT", href: "/about" },
    { name: "EVENTS", href: "/events" },
    { name: "MAP", href: "/map" },
    { name: "TEAMS", href: "/teams" },
];
---

<!-- Mobile Navigation (hamburger) - visible on screens < 1024px -->
<div class="mobile-nav-wrapper">
    <MobileNav />
</div>

<!-- Desktop Navigation (glass surface) - visible on screens >= 1024px -->
{
    showDesktopNav && (
        <nav id="navbar" class="navbar desktop-nav-wrapper">
            <GlassSurface client:load width="100%" borderRadius={50}>
                <div class="content">
                    <div class="img">
                        <a href="/">
                            <img id="logo" src="/assets/logo.svg" alt="Logo" />
                        </a>
                    </div>
                    <div class="navlinks">
                        <div class="links">
                            {navLinks.map((l) => (
                                <a href={l.href}>{l.name}</a>
                            ))}
                        </div>
                        <a
                            href="https://konfhub.com/svit"
                            target="_blank"
                            class="register-btn"
                        >
                            REGISTER NOW
                        </a>
                    </div>
                </div>
            </GlassSurface>
        </nav>
    )
}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Bruno+Ace+SC&display=swap');
    
    /* Default: Show mobile, hide desktop */
    .mobile-nav-wrapper {
        display: block;
    }

    .desktop-nav-wrapper {
        display: none;
    }

    /* Desktop: Show desktop, hide mobile */
    @media (min-width: 1024px) {
        .mobile-nav-wrapper {
            display: none;
        }

        .desktop-nav-wrapper {
            display: block;
        }
    }

    /* Desktop navbar styles - matching home page navbar.astro */
    .navbar {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        max-width: 1200px;
        z-index: 9900;
        font-family: 'Bruno Ace SC', sans-serif;
    }

    .content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 40px;
        width: 100%;
    }

    .img {
        display: flex;
        align-items: center;
        flex-shrink: 0;
    }

    .img a {
        display: flex;
        align-items: center;
    }

    #logo {
        height: 40px;
        transform-origin: center;
    }

    .navlinks {
        display: flex;
        align-items: center;
        gap: 40px;
    }

    .links {
        display: flex;
        gap: 40px;
    }

    .links a {
        color: #000;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }

    .links a:hover {
        color: #b7654a;
    }

    .register-btn {
        background: linear-gradient(135deg, #f1b5a2 0%, #e89b88 100%);
        color: #000;
        text-decoration: none;
        padding: 12px 28px;
        border-radius: 30px;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(241, 181, 162, 0.5);
        flex-shrink: 0;
    }

    .register-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 25px rgba(241, 181, 162, 0.7);
    }
</style>
