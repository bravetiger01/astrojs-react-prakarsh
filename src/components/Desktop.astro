<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        overflow: hidden;
        background: #1a1a2e;
        font-family: Arial, sans-serif;
    }

    /* Base sprite class */
    .sprite {
        position: absolute;
        background-image: url("/public/assets/FullSpriteSheet.svg");
        background-repeat: no-repeat;
        image-rendering: crisp-edges;
    }

    /* Title */
    .title {
        width: 2100px;
        height: 425px;
        background-position: 0 0;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 100;
    }

    /* Base Clouds */
    .base-clouds {
        width: 1525px;
        height: 425px;
        background-position: -2100px 0;
        top: 20%;
        left: 10%;
        z-index: 5;
        animation: float 20s ease-in-out infinite;
    }

    /* Rotating Windmill */
    .rotating-windmill {
        width: 470px;
        height: 450px;
        background-position: 0 -425px;
        bottom: 100px;
        right: 15%;
        z-index: 50;
        animation: spin 8s linear infinite;
    }

    /* Rotating Water Mill 1 */
    .rotating-watermill1 {
        width: 699px;
        height: 450px;
        background-position: -831px -425px;
        bottom: 120px;
        left: 20%;
        z-index: 45;
        animation: spin 10s linear infinite;
    }

    /* Rotating Water Mill 2 */
    .rotating-watermill2 {
        width: 570px;
        height: 450px;
        background-position: -1530px -425px;
        bottom: 80px;
        left: 50%;
        z-index: 45;
        animation: spin 12s linear infinite reverse;
    }

    /* Static Water Mill */
    .static-watermill {
        width: 831px;
        height: 949px;
        background-position: 0 -875px;
        bottom: 50px;
        left: 5%;
        z-index: 60;
    }

    /* Static Wind Mill */
    .static-windmill {
        width: 699px;
        height: 949px;
        background-position: -831px -875px;
        bottom: 50px;
        right: 10%;
        z-index: 60;
    }

    /* Title Cloud 1 */
    .title-cloud1 {
        width: 470px;
        height: 739px;
        background-position: 0 -2050px;
        top: 10%;
        left: 5%;
        z-index: 8;
        animation: float 15s ease-in-out infinite;
    }

    /* Title Cloud 2 */
    .title-cloud2 {
        width: 1269px;
        height: 739px;
        background-position: -831px -2050px;
        top: 15%;
        right: 5%;
        z-index: 8;
        animation: float 18s ease-in-out infinite 2s;
    }

    /* Stars */
    .stars {
        width: 1952px;
        height: 970px;
        background-position: -2100px -425px;
        top: 0;
        left: 0;
        z-index: 1;
        animation: twinkle 3s ease-in-out infinite;
    }

    /* Geometric Circle Grid */
    .geometric-circle {
        width: 1952px;
        height: 1394px;
        background-position: -2100px -1395px;
        bottom: 0;
        right: 0;
        z-index: 2;
        opacity: 0.6;
    }

    /* Babbage Machine */
    .babbage-machine {
        width: 1269px;
        height: 739px;
        background-position: -831px -2050px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 40;
    }

    /* Hour Glass Left Pillar */
    .hourglass-left {
        width: 470px;
        height: 1366px;
        background-position: 0 -2790px;
        bottom: 0;
        left: 25%;
        z-index: 70;
    }

    /* Hour Glass Right Pillar */
    .hourglass-right {
        width: 361px;
        height: 1366px;
        background-position: -470px -2790px;
        bottom: 0;
        right: 25%;
        z-index: 70;
    }

    /* Hour Glass Base */
    .hourglass-base {
        width: 1525px;
        height: 710px;
        background-position: -2100px -2790px;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: 65;
    }

    /* Hour Glass Top */
    .hourglass-top {
        width: 1525px;
        height: 655px;
        background-position: -2100px -3501px;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: 65;
    }

    /* BG Future Build */
    .bg-future1 {
        width: 570px;
        height: 515px;
        background-position: -1530px -875px;
        bottom: 20%;
        left: 15%;
        z-index: 10;
    }

    /* BG Future Build 2 */
    .bg-future2 {
        width: 1028px;
        height: 520px;
        background-position: -4052px -875px;
        bottom: 25%;
        right: 20%;
        z-index: 10;
    }

    /* Foreground Road */
    .foreground-road {
        width: 1028px;
        height: 425px;
        background-position: -4052px 0;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: 80;
    }

    /* Train */
    .train {
        width: 1028px;
        height: 71px;
        background-position: -4052px -1853px;
        bottom: 15%;
        left: -1028px;
        z-index: 75;
        animation: trainMove 15s linear infinite;
    }

    /* Bridge */
    .bridge {
        width: 1028px;
        height: 126px;
        background-position: -4052px -1924px;
        bottom: 12%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 55;
    }

    /* Purple Clouds */
    .purple-cloud1 {
        width: 1028px;
        height: 740px;
        background-position: -4052px -2050px;
        top: 30%;
        left: 10%;
        z-index: 6;
        animation: float 25s ease-in-out infinite;
    }

    .purple-cloud2 {
        width: 1028px;
        height: 710px;
        background-position: -4052px -2790px;
        top: 35%;
        right: 8%;
        z-index: 6;
        animation: float 22s ease-in-out infinite 3s;
    }

    .purple-cloud3 {
        width: 104px;
        height: 1581px;
        background-position: -4052px -3500px;
        top: 10%;
        left: 2%;
        z-index: 7;
        animation: float 30s ease-in-out infinite 1s;
    }

    /* Peach Clouds */
    .peach-cloud1 {
        width: 104px;
        height: 450px;
        background-position: -4052px -425px;
        top: 20%;
        right: 5%;
        z-index: 9;
        animation: float 20s ease-in-out infinite 4s;
    }

    .peach-cloud2 {
        width: 104px;
        height: 429px;
        background-position: -4052px -1395px;
        top: 40%;
        right: 15%;
        z-index: 9;
        animation: float 18s ease-in-out infinite 2s;
    }

    /* Animations */
    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    @keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    @keyframes twinkle {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }

    @keyframes trainMove {
        from {
            left: -1028px;
        }
        to {
            left: 100%;
        }
    }

    /* Responsive scaling */
    @media (max-width: 1024px) {
        .sprite {
            transform: scale(0.8);
            transform-origin: center;
        }
    }
</style>

