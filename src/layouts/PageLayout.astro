---
/**
 * PageLayout - General layout for non-home pages (About, Events, etc)
 * Uses ResponsiveNav - hamburger on mobile, glass navbar on desktop
 */
import "../styles/index.css";
import ResponsiveNav from "../components/ResponsiveNav.astro";
import GlobalAudio from "../components/GlobalAudio.astro";
import { ClientRouter } from "astro:transitions";
const { title = "Prakarsh 2026", showDesktopNav = true } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" href="/favicon.svg" />
        <title>{title}</title>
        <ClientRouter />
        <style>
            body {
                background: #0a0515;
                min-height: 100vh;
            }
        </style>
    </head>

    <body>
        <ResponsiveNav showDesktopNav={showDesktopNav} />
        <GlobalAudio />

        <!-- PREFETCH EVENT DATA ON PAGE LOAD -->
        <script>
            import { prefetchAllEvents } from "../lib/event-cache";

            // Only prefetch once per session
            const PREFETCH_KEY = "eventDataPrefetched";

            if (!sessionStorage.getItem(PREFETCH_KEY)) {
                console.log("üöÄ PageLayout: Starting data prefetch...");

                const prefetchStart = performance.now();

                prefetchAllEvents()
                    .then(() => {
                        const prefetchTime = performance.now() - prefetchStart;
                        console.log(
                            `‚úÖ PageLayout: Data prefetch completed in ${Math.round(prefetchTime)}ms`,
                        );
                        sessionStorage.setItem(PREFETCH_KEY, "true");
                    })
                    .catch((error) => {
                        console.warn(
                            "‚ö†Ô∏è PageLayout: Prefetch failed, will use local data:",
                            error,
                        );
                    });
            } else {
                console.log("‚ÑπÔ∏è PageLayout: Using cached event data");
            }
        </script>

        <slot />
    </body>
</html>
